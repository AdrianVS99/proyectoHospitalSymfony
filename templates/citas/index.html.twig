{% extends 'base.html.twig' %}

{% block title %}Citas index{% endblock %}

{% block body %}
    <h1>Citas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Info</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.nombre }}</td>
                <td>{{ cita.dni }}</td>
                <td>{{ cita.direccion }}</td>
                <td>{{ cita.telefono }}</td>
                <td>{{ cita.email }}</td>
                <td>{{ cita.info }}</td>
                <td>
                    <a href="{{ path('app_citas_show', {'id': cita.id}) }}">show</a>
                    <a href="{{ path('app_citas_edit', {'id': cita.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_citas_new') }}">Create new</a>
{% endblock %}
